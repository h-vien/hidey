{
  "manifest_version": 3,
  "name": "Hidey – Tự động làm mờ tin nhắn Zalo, Telegram, Messenger, Whatsapp để bảo mật quyền riêng tư",
  "version": "1.0.8",
  "description": "Hidey là tiện ích Chrome giúp tự động làm mờ tin nhắn nhạy cảm trên Zalo Web, Telegram Web, Messenger, Whatsapp và các nền tảng chat phổ biến khác, giúp bạn bảo mật nội dung trò chuyện khi làm việc, chia sẻ màn hình hoặc sử dụng máy tính nơi công cộng.", 
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "dist/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "dist/content/blur-engine.js",
        "dist/content/selector-detector.js",
        "dist/content/drag-blur.js",
        "dist/content/unblur-detector.js",
        "dist/content/floating-button.js",
        "dist/content/content.js"
      ],
      "css": ["styles/content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icons/icon.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon.png"
  },
  "commands": {
    "toggle-blur": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+B"
      },
      "description": "Toggle blur mode"
    }
  }
}

